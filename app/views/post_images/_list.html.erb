<!--ユーザの投稿一覧-->
<% post_images.each do |post_image| %>
<div>
  <!--showページへのパスに現在の投稿idを渡してリンク-->
  <%= link_to post_image_path(post_image.id) do %>
    <!--現在の投稿にget_imageメソッドを当てて対象画像をget、image_tagで表示-->
    <%= image_tag post_image.get_image %>
  <% end %>
  <!--現在の投稿に結びつくユーザに対してget_profile_imageメソッドで対象画像をget、image_tagで表示-->
  <p>投稿ユーザー画像：<%= image_tag post_image.user.get_profile_image("100x100") %></p>
  <p>ショップ名：<%= post_image.shop_name %></p>
  <p>説明：<%= post_image.caption %></p>
  <!--現在の投稿に結びつくユーザのnameカラムを取得-->
  <p>ユーザーネーム：<%= post_image.user.name %></p>

</div>
<% end %>
